{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="titre">Editer le langage</h1>

    {{ form_start(edit_form) }}
    <div class="container">
        <div class="row">
            <div class="col m8 offset-m2">
                <div class="row">
                    <div class="input-field col s12">
                        {{ form_label(edit_form.nom) }}
                        {{ form_widget(edit_form.nom) }}
                        {{ form_errors(edit_form.nom) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="button-centre">
        <input class="btn btn-default edit_admin" type="submit" value="Valider" />
    </div>
    {{ form_end(edit_form) }}

    <ul>
        <li class="button-centre">
            <a class="btn btn-default edit_admin" href="{{ path('langage_index') }}">Retourner Ã  la liste des langages</a>
        </li>
    </ul>

    {{ form_start (delete_form) }}
    <div class="button-centre">
        <input class="btn btn-default edit_admin" type="submit" value="Supprimer">
    </div>
    {{ form_end (delete_form) }}
{% endblock %}

