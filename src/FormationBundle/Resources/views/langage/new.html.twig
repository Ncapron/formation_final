{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="titre">Création d'un langage</h1>

    {{ form_start(form) }}
    <div class="container">
        <div class="row">
            <div class="col m8 offset-m2">
                <div class="row">
                    <div class="input-field col s12">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            {{ form_widget(form.module) }}
                            {{ form_label(form.module) }}
                            {{ form_errors(form.module) }}
                        </div>
                </div>
            </div>
        </div>
    </div>
    <div class="button-centre">
        <input class="btn btn-default edit_admin" type="submit" value="Create" />
    </div>
    {{ form_end(form) }}

    <ul>
        <li class="button-centre">
            <a class="btn btn-default edit_admin" href="{{ path('langage_index') }}">Retourner à la liste des langages</a>
        </li>
    </ul>
{% endblock %}
