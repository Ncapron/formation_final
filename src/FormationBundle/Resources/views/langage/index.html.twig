<div class="container-fluid">
    <div class="row">
        <div class="col s6">
            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for langage in langages %}
