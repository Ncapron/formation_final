                        <td><a href="{{ path('langage_show', { 'id': langage.id }) }}">{{ langage.id }}</a></td>
                        <td>{{ langage.nom }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('langage_show', { 'id': langage.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('langage_edit', { 'id': langage.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

    <ul>
        <li>
            <a href="{{ path('module_new') }}">Create a new entry</a>
