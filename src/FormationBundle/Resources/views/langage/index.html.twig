{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="titre">Liste des différents langages</h1>

<div class="container-fluid ">
    <div class="row">
        <div class="col m8 offset-m2">
            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th class="action">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for langage in langages %}
                    <tr>
                        <td>{{ langage.nom }}</td>
                        <td>
                            <ul>
                                <li class="action">
                                    <a href="{{ path('langage_edit', { 'id': langage.id }) }}">Editer</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

    <ul>
        <li class="button-centre">
            <a class="btn btn-default edit_admin" href="{{ path('langage_new') }}">Créer un nouveau langage</a>
        </li>
    </ul>
{% endblock %}
