{% extends 'base.html.twig' %}

{% block body %}
    <div class="col s12 m7">
        <h2 class="titre">{{ promotion.titre }}</h2>
        <div class="card horizontal">
            <div class="card-image">
                <img src="{{ asset('uploads/promotion/') }}{{ promotion.logo }}" alt="img" width="50" height="220" />
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <p>Titre  : {{ promotion.titre }}</p>
                    <p>Date de d√©but : {{ promotion.dateDeb|date("d/m/Y") }}</p>
                    <p>Date de fin : {{ promotion.dateFin|date("d/m/Y") }}</p>
                    <p>Nombre de semaines : {{ promotion.semaines }}</p>
                </div>
                <div class="card-action">
                    <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}">Edit</a>
                    <a href="{{ path('promotion_index') }}">Back to the list</a>
                </div>
            </div>
        </div>
    </div>

    <ul>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
