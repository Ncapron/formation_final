{% extends 'base.html.twig' %}

{% block body %}
    <h1>Promotion list</h1>
    <div class="container">
        <div class="row">
            <div class="col m12">
                {% for promotion in promotions %}
                    <figure>
                        <img src="tigre.jpg" alt="Tigre" width="320" height="240" />
                        <figcaption>
                            <p>{{ promotion.titre }}</p>
                            <p>{{ promotion.semaines }}semaines</p>
                            <ul>
                                <li>
                                    <a href="{{ path('promotion_show', { 'id': promotion.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}">edit</a>
                                </li>
                            </ul>
                        </figcaption>
                    </figure>
                {% endfor %}
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('promotion_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
